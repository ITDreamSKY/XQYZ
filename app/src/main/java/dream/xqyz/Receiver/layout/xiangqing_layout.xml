<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:id="@+id/act_xiangqing_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/act_xiangqing_backImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="宝贝详情"
            android:textColor="#000000"
            android:textSize="25sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xiangqing_shoucang" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/xiangqing_more" />
    </LinearLayout>

    <View
        android:id="@+id/act_xiangqing_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/act_xiangqing_lin"
        android:background="#aabebe" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_xiangqing_view"
        android:layout_marginBottom="75dp">
        <!--android:layout_above="@id/act_xiangqing_rel"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/act_xiangqing_userImg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/touxiang" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/act_xiangqing_nickNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/act_xiangqing_timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="发布时间"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/qian" />

                    <TextView
                        android:id="@+id/act_xiangqing_moneyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/act_xiangqing_contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="内容区域"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/act_xiangqing_ImgListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="#00000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/zhi_biaoji" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="担保交易"
                    android:textColor="#00BFFF"
                    android:textSize="17sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="点赞"
                    android:textColor="#696969"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/act_xiangqing_goodNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#696969"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="·"
                    android:textColor="#696969"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="留言"
                    android:textColor="#696969"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/act_xiangqing_messageNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#696969"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f3f3f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="热门留言" />
            </LinearLayout>

            <ListView
                android:id="@+id/act_xiangqing_messageListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="#00000000" />
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/act_xiangqing_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">


        <LinearLayout
            android:id="@+id/act_xiangqing_bottomLin"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#fafafa"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/act_xiangqing_messageLin"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="#fafafa"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/xiangqing_liuyan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="留言"
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_xiangqing_goodLin"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:background="#fafafa"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <ImageView
                    android:id="@+id/act_xiangqing_goodImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/xiangqing_zan_nor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="点赞"
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/act_xiangqing_buyTv"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="#ff0000"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="我想要"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_xiangqing_sendMessageLin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#f0f0f0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/act_xiangqing_hiddenKeyBoard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:src="@drawable/keyboard" />

            <EditText
                android:id="@+id/act_xiangqing_sendMessageLin_messageEt"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/act_xiangqing_sendMessageLin_sendTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/select_but"
                android:clickable="true"
                android:padding="20dp"
                android:text="发送" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
